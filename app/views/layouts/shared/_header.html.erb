<div class="container">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
    <div class="col-md-3 mb-2 mb-md-0">
      <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none text-success">
        Inicio
      </a>
    </div>

    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
      <% if user_signed_in? %>
        <li><%= link_to "Proyectos", proyects_path, class: "nav-link px-2" %></li>
      <% else %>
        <li><%= link_to "Inicio", root_path, class: "nav-link px-2" %></li>
      <% end %>
    </ul>
    <div class="col-md-3 text-end">
      <% if user_signed_in? %>
        Hola <%= current_user.email %>
        <%= button_to "Cerrar sesion", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger me-2", form_class: "d-inline" %>
      <% else %>
        <%= link_to "Iniciar sesion", new_session_path(resource_name), class: "btn btn-outline-primary me-2" %>
        <%= link_to "Registrarme", new_registration_path(resource_name), class: "btn btn-primary" %>
      <% end %>
    </div>
  </header>
</div>
