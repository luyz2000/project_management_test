<%= form_with(model: proyect) do |form| %>
  <% if proyect.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(proyect.errors.count, "error") %> prohibited this proyect from being saved:</h2>

      <ul>
        <% proyect.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :slug, style: "display: block" %>
    <%= form.text_field :slug, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, t("activerecord.attributes.proyect.statuses").invert, {include_blank: 'Selecciona un estatus'},{class: "form-select form-control", required: true} %>
  </div>

  <%= form.submit "Guardar", class: "btn btn-success w-100 mt-3" %>
<% end %>
